#include <bits/stdc++.h>
using namespace std;

#define FASTIO ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);

const int MOD = (int)1e9 + 7;

void solve() {
    int n, q;
    cin >> n >> q;
    vector<long long> a(n + 1);
    for (int i = 1; i <= n; ++i) {
        cin >> a[i];
    }
    vector<long long> p1(n + 1, 0);
    vector<long long> p2(n + 1, 0);
    vector<long long> p3(n + 1, 0);
    for (int i = 1; i <= n; ++i) {
        p1[i] = p1[i - 1] + a[i];
        p2[i] = p2[i - 1] + (long long)i * a[i];
        p3[i] = p3[i - 1] + (long long)i * i * a[i];
    }
    while (q--) {
        int l, r;
        cin >> l >> r;
        long long sum_a = p1[r] - p1[l - 1];
        long long sum_ka = p2[r] - p2[l - 1];
        long long sum_k2a = p3[r] - p3[l - 1];
        long long ans = (long long)(r + l) * sum_ka - sum_k2a - (long long)(l - 1) * (r + 1) * sum_a;
        cout << ans << '\n';
    }
}

int main() {
    FASTIO;
    int t = 1; 
    // cin >> t;
    while (t--) solve();
    return 0;
}
